<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#e6f2ff"
    tools:context="com.ferit.davor.smarthouse.MainActivity">

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/fan"
        android:id="@+id/btn_vent"
        android:layout_alignTop="@+id/btn_window"
        android:layout_alignStart="@+id/btn_door"
        android:layout_alignLeft="@+id/btn_door"
        android:background="@drawable/background"
        android:scaleType="fitCenter" />


    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/quit"
        android:id="@+id/btn_quit"
        android:layout_alignTop="@+id/btn_stats"
        android:layout_alignStart="@+id/btn_vent"
        android:layout_alignLeft="@+id/btn_vent"
        android:background="@drawable/background"
        android:scaleType="fitCenter" />


    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/status"
        android:id="@+id/btn_stats"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btn_window"
        android:layout_alignStart="@+id/btn_window"
        android:layout_marginBottom="57dp"
        android:background="@drawable/background"
        android:scaleType="fitCenter" />

    <ImageButton
        android:layout_width="100dp"
        android:src="@drawable/lights"
        android:layout_marginTop="13dp"
        android:id="@+id/btn_lights"
        android:layout_marginStart="41dp"
        android:layout_marginLeft="41dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/background"
        android:scaleType="fitCenter"
        android:layout_height="100dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/window"
        android:id="@+id/btn_window"
        android:layout_above="@+id/btn_stats"
        android:layout_alignLeft="@+id/btn_lights"
        android:layout_alignStart="@+id/btn_lights"
        android:layout_marginBottom="56dp"
        android:background="@drawable/background"
        android:scaleType="fitCenter" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/door"
        android:id="@+id/btn_door"
        android:layout_marginRight="53dp"
        android:layout_marginEnd="53dp"
        android:layout_alignTop="@+id/btn_lights"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/background"
        android:scaleType="fitCenter" />

    <TextView
        android:text="Lights"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:id="@+id/textView"
        android:layout_below="@+id/btn_lights"
        android:layout_alignLeft="@+id/btn_lights"
        android:layout_alignStart="@+id/btn_lights"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp" />

    <TextView
        android:text="Door"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignLeft="@+id/btn_door"
        android:layout_alignStart="@+id/btn_door"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp" />

    <TextView
        android:text="Window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_below="@+id/btn_vent"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="11dp" />

    <TextView
        android:text="Ventilation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignRight="@+id/btn_vent"
        android:layout_alignEnd="@+id/btn_vent"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:id="@+id/textView8" />

    <TextView
        android:text="Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:id="@+id/textView9"
        android:layout_below="@+id/btn_quit"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <TextView
        android:text="Quit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:layout_alignBaseline="@+id/textView9"
        android:layout_alignBottom="@+id/textView9"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignEnd="@+id/textView6" />


</RelativeLayout>
